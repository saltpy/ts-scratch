{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node"
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "**/*.spec.ts"
  ]
}
